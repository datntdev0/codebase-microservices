{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: start datntdev.Microservices.Angular",
      "type": "npm",
      "script": "start",
      "group": "build",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/datntdev.Microservices.Angular"
      },
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "npm: test datntdev.Microservices.Angular",
      "type": "npm",
      "script": "test",
      "group": "test",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/apps/datntdev.Microservices.Angular"
      },
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "dotnet: test datntdev.Microservices",
      "type": "process",
      "command": "dotnet",
      "args": ["test"],
      "group": "test",
      "problemMatcher": "$msCompile"
    }
  ]
}
