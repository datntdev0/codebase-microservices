{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "srv-admin": {
        "ClusterId": "srv-admin",
        "Match": {
          "Path": "/srv-admin/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/srv-admin" }
        ]
      },
      "srv-identity": {
        "ClusterId": "srv-identity",
        "Match": {
          "Path": "/srv-identity/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/srv-identity" }
        ]
      },
      "srv-notify": {
        "ClusterId": "srv-notify",
        "Match": {
          "Path": "/srv-notify/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/srv-notify" }
        ]
      },
      "srv-payment": {
        "ClusterId": "srv-payment",
        "Match": {
          "Path": "/srv-payment/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/srv-payment" }
        ]
      }
    },
    "Clusters": {
      "srv-admin": {
        "Destinations": {
          "srv-admin": {
            "Address": "https://srv-admin"
          }
        }
      },
      "srv-identity": {
        "Destinations": {
          "srv-identity": {
            "Address": "https://srv-identity"
          }
        }
      },
      "srv-notify": {
        "Destinations": {
          "srv-notify": {
            "Address": "https://srv-notify"
          }
        }
      },
      "srv-payment": {
        "Destinations": {
          "srv-payment": {
            "Address": "https://srv-payment"
          }
        }
      }
    }
  }
}
